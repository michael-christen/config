root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rs,rlib,c,cpp,h,js,jsx,pp}]
indent_style = tab
indent_size = 2
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

# Makefiles
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

[*.mk]
indent_style = tab
